<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.oneplayer"
    android:installLocation="preferExternal">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OnePlayer">
        <activity
            android:name=".Front.Substituto_View"
            android:exported="true" />
        <activity
            android:name=".Front.ViewGame_5x5"
            android:exported="true"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Front.LoadGame_5x5"
            android:exported="true"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Front.List_Jogos"
            android:exported="true" />
        <activity
            android:name=".Front.Ranking"
            android:exported="true"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Front.ViewGame_3x3"
            android:exported="true"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Front.LoadGame_3x3"
            android:exported="true"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Front.Membros"
            android:exported="false" />
        <activity
            android:name=".Front.New_Game"
            android:exported="false" />
        <activity
            android:name=".Front.Add_Jogador"
            android:exported="true" />
        <activity
            android:name=".Front.Main_Liga"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>